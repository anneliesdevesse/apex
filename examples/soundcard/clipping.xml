<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">
  
  
  <!--
    The output of this experiment clips, a message should be shown and it should be reported in the results file
    Only the first and second stimulus clips, the clipping message should be reset afterwards
    -->

  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>1</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
      <trial id="trial2" >
        <answer>correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    
    
    <trial id="trial3" >
      <answer>correct</answer>
      <screen id="screen1" />
      <stimulus id="stimulus2" />
    </trial>
    <trial id="trial4" >
      <answer>correct</answer>
      <screen id="screen1" />
      <stimulus id="stimulus2" />
    </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen1" >
      <gridLayout height="2" width="2" id="answer_layout" x="1" y="2">
        <button x="1" y="1" id="correct">
          <text>OK</text>
        </button>
       
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="correct"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks>
    <uri_prefix>file:../stimuli</uri_prefix>
    <datablock id="wd1">
      <device>soundcard</device>
      <uri>wd1.wav</uri>
    </datablock>
  </datablocks>

  <devices>
    <master>soundcard</master>
    <device id="soundcard" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>

  <filters>
   <filter id="amp" xsi:type="apex:amplifier">
     <device>soundcard</device>
     <channels>1</channels>
     <basegain>0</basegain>
     <gain id="gain">0</gain>
   </filter>
  </filters>
 
  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <datablocks>
                 <datablock id="wd1" />                    
           </datablocks>
      <variableParameters>
        <parameter id="gain">30</parameter>
      </variableParameters>
      <fixedParameters/>
    </stimulus>
    
    <stimulus id="stimulus2" >
      <datablocks>
        <datablock id="wd1" />                    
      </datablocks>
      <variableParameters>
        <parameter id="gain">0</parameter>
      </variableParameters>
      <fixedParameters/>
    </stimulus>
  </stimuli>
  
<connections>
  <connection>
    <from>
      <id>wd1</id>
      <channel>0</channel>
    </from>
    <to>
      <id>amp</id>
      <channel>0</channel>
    </to>
    </connection>
    
    <connection>
  
  <from>
      <id>amp</id>
      <channel>0</channel>
    </from>
    <to>
      <id>soundcard</id>
      <channel>0</channel>
    </to>
  </connection>

</connections>




</apex:apex>


