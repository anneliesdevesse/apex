<?xml version="1.0" encoding="UTF-8"?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  <!-- 
  Regression test for multiprocedure
    -->
    
  <procedure xsi:type="apex:multiProcedureType">
    <parameters>
      <order>sequential</order>
    </parameters>
    
    <procedure xsi:type="apex:constantProcedureType" id="procedure1">
    <parameters>
      <presentations>3</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <choices>3</choices>
    </parameters>
    
    <trials>
      <trial id="trial1">
        <answer>button1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
        <standard id="stimulus2"/>
      </trial>
      
    </trials>
  </procedure>
    
    <procedure xsi:type="apex:constantProcedureType" id="procedure2">
      <parameters>
        <presentations>3</presentations>
        <skip>0</skip>
        <order>sequential</order>
        <choices>3</choices>
      </parameters>
      
      <trials>

        <trial id="trial4">
          <answer>button4</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus3"/>
          <standard id="stimulus4"/>
        </trial>
        
        
      </trials>
    </procedure>
    
  </procedure>
  
  <corrector xsi:type="apex:alternatives">
    <answers>
      <answer number="1" value="button1"/>
      <answer number="2" value="button2"/>
      <answer number="3" value="button3"/>
    </answers>
  </corrector>
    
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    
    <screen id="screen1">
      <gridLayout height="1" width="3" id="main_layout1">
        
        <button x="1" y="1" id="button1">
          <text>1</text>
        </button>
        
        <button x="2" y="1" id="button2">
          <text>2</text>
        </button>
        
        <button x="3" y="1" id="button3">
          <text>3</text>
        </button>
        
  
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
    

      
  </screens> 
  
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
    <datablock id="rawdata1" >
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
    </datablock>
   <datablock id="rawdata2" >
