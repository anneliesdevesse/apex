<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
  xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment" version="1">

<!-- Make a trial without a stimulus -->
  
  <procedure xsi:type="apex:trainingProcedureType"> 
  <parameters>
    <presentations>10</presentations>
    <order>sequential</order>
  </parameters>
    <trials>
      <trial id="trial">
        <answer>button</answer>
        <screen id="screen"/>
      </trial>
    </trials>
  </procedure>
  
  <corrector xsi:type="apex:isequal"/>
  
  <screens>
    <screen id="screen">
      <gridLayout width="1" height="1">
        <button id="button">
          <text>stimulus</text>
        </button>
      </gridLayout>
      <buttongroup id="buttongroup">
        <button id="button"/>
      </buttongroup>
      
      <default_answer_element>buttongroup</default_answer_element>
    </screen>
  </screens>
  
  <datablocks>
  </datablocks>

<devices>
  <device id="soundcard" xsi:type="apex:wavDeviceType">
    <card>default</card>
    <channels>1</channels>
    <gain>0</gain>
    <samplerate>44100</samplerate>
  </device>
</devices>
  
  <stimuli>
    
  </stimuli>

</apex:apex>
