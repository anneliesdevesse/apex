<?xml version='1.0' encoding='utf-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <uri_prefix>../graphics/</uri_prefix>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    
    <screen id="screen1" >
      <gridLayout height="2" width="2" id="answer_layout" x="1" y="2">
        <button x="1" y="1" id="correct">
          <text>ok</text>
        </button>
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="correct"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks/>

  <devices>
    <device id="soundcard" xsi:type="apex:dummyDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>

  <filters/>

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks/>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections/>

</apex:apex>


