<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">



  <!--

    Shows use of child mode: intro and outro movies, child panel, progressbar

  -->

  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <choices>3</choices>
    </parameters>

    <trials>
      <trial id="trial1" >
        <screen id="screen1" />
        <stimulus id="stimulus1" />
        <standard id="standard1"/>
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:alternatives">
    <answers>
      <answer number="1" value="button1"/>
      <answer number="2" value="button2"/>
      <answer number="3" value="button3"/>
    </answers>
  </corrector>

  <screens>
    <uri_prefix>../movies/</uri_prefix>
    <general>
      <showpanel>true</showpanel>
    </general>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="3600">true</feedback>
      <showcurrent>true</showcurrent>
    </reinforcement>

    <childmode>
      <intro length="30000">intro</intro>
      <outro length="30000">outro</outro>
      <panel>reinforcement.swf</panel>
    </childmode>
    <screen id="screen1" >
      <gridLayout height="3" width="3" id="answer_layout" x="1" y="1">
        <flash x="1" y="2" id="button1">
          <shortcut>1</shortcut>
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
        <flash x="2" y="2" id="button2">
          <shortcut>2</shortcut>
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
        <flash x="3" y="2" id="button3">
          <shortcut>3</shortcut>
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
    <screen id="intro">
      <gridLayout height="1" width="1" id="ilayout" x="1" y="1">
        <flash x="1" y="1" id="blah" >
          <uri>dragon/intro.swf</uri>
        </flash>
      </gridLayout>
    </screen>
    <screen id="outro">
      <gridLayout height="1" width="1" id="olayout" x="1" y="1">
        <flash x="1" y="1" id="oblah" >
          <uri>dragon/outro.swf</uri>
        </flash>
      </gridLayout>
    </screen>
  </screens>


  <datablocks>
    <uri_prefix>../stimuli</uri_prefix>
    <datablock id="rawdata1" >
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
    </datablock>
    <datablock id="noisedata" >
      <device>wavdevice</device>
      <uri>ruisje.wav</uri>
    </datablock>
  </datablocks>


  <devices>
    <device id="wavdevice" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>


  <stimuli>

    <stimulus id="standard1" >
      <datablocks>
        <datablock id="noisedata" />
      </datablocks>
    </stimulus>

    <stimulus id="stimulus1" >
      <datablocks>
        <datablock id="rawdata1" />
      </datablocks>
    </stimulus>
  </stimuli>
  
</apex:apex>
