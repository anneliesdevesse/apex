<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">



  <!--

    Shows use of child mode: intro and outro movies, child panel, progressbar

  -->

  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    <trials>
      <trial id="trial1">
        <answer>button1</answer>
        <screen id="screen1"/>
        <stimulus id="stim1"/>
      </trial>
      <trial id="trial2">
        <answer>button2</answer>
        <screen id="screen1"/>
        <stimulus id="stim2"/>
      </trial>
      <trial id="trial3">
        <answer>button3</answer>
        <screen id="screen1"/>
        <stimulus id="stim12"/>
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <uri_prefix>../movies</uri_prefix>
    <general>
      <showpanel>true</showpanel>
    </general>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="1000">true</feedback>
      <showcurrent>false</showcurrent>
    </reinforcement>
    
    <childmode>
      <intro length="30000">intro</intro>
      <outro length="30000">outro</outro>
      <panel>reinforcement.swf</panel>
    </childmode>
    <screen id="screen1" >
      <gridLayout height="3" width="3" id="answer_layout" x="1" y="1">
        <flash x="1" y="2" id="button1">
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
        <flash x="2" y="2" id="button2">
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
        <flash x="3" y="2" id="button3">
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
    <screen id="intro">
      <gridLayout height="1" width="1" id="ilayout" x="1" y="1">
        <flash x="1" y="1" id="blah" >
          <uri>dragon/intro.swf</uri>
        </flash>
      </gridLayout>
    </screen>
    <screen id="outro">
      <gridLayout height="1" width="1" id="olayout" x="1" y="1">
        <flash x="1" y="1" id="oblah" >
          <uri>dragon/outro.swf</uri>
        </flash>
      </gridLayout>
    </screen>
  </screens>


  <datablocks>
    <uri_prefix>../stimuli/</uri_prefix>
    <datablock id="elecdata1">
      <device>l34-1</device>
      <description>sample raw l34 datablock</description>
      <uri>fadein.qic</uri>
    </datablock>
    <datablock id="elecdata2">
      <device>l34-2</device>
      <description>sample raw l34 datablock</description>
      <uri>fadein.qic</uri>
    </datablock>
    
  </datablocks>


  <devices>
    <master>l34-1</master>
    <device id="l34-1" xsi:type="apex:L34DeviceType">
      <device_id>1</device_id>
      <implant>cic3</implant>
      <trigger>out</trigger>
      <defaultmap>
        <inline>
          <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>140</period>
          <channel number="1" electrode="22" threshold="1" comfort="255"/>
          <channel number="2" electrode="21" threshold="1" comfort="255"/>
          <channel number="3" electrode="20" threshold="1" comfort="255"/>
          <channel number="4" electrode="19" threshold="1" comfort="255"/>
          <channel number="5" electrode="18" threshold="1" comfort="255"/>
          <channel number="6" electrode="17" threshold="1" comfort="255"/>
          <channel number="7" electrode="16" threshold="1" comfort="255"/>
          <channel number="8" electrode="15" threshold="1" comfort="255"/>
          <channel number="9" electrode="14" threshold="1" comfort="255"/>
          <channel number="10" electrode="13" threshold="1" comfort="255"/>
          <channel number="11" electrode="12" threshold="1" comfort="255"/>
          <channel number="12" electrode="11" threshold="1" comfort="255"/>
          <channel number="13" electrode="10" threshold="1" comfort="255"/>
          <channel number="14" electrode="9" threshold="1" comfort="255"/>
          <channel number="15" electrode="8" threshold="1" comfort="255"/>
          <channel number="16" electrode="7" threshold="1" comfort="255"/>
          <channel number="17" electrode="6" threshold="1" comfort="255"/>
          <channel number="18" electrode="5" threshold="1" comfort="255"/>
          <channel number="19" electrode="4" threshold="1" comfort="255"/>
          <channel number="20" electrode="3" threshold="1" comfort="255"/>
          <channel number="21" electrode="2" threshold="1" comfort="255"/>
          <channel number="22" electrode="1" threshold="1" comfort="255"/>
        </inline>
      </defaultmap>
    </device>
    <device id="l34-2" xsi:type="apex:L34DeviceType">
      <device_id>2</device_id>
      <implant>cic3</implant>
      <trigger>in</trigger>
      <defaultmap>
        <inline>
          <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>140</period>
          <channel number="1" electrode="22" threshold="1" comfort="255"/>
          <channel number="2" electrode="21" threshold="1" comfort="255"/>
          <channel number="3" electrode="20" threshold="1" comfort="255"/>
          <channel number="4" electrode="19" threshold="1" comfort="255"/>
          <channel number="5" electrode="18" threshold="1" comfort="255"/>
          <channel number="6" electrode="17" threshold="1" comfort="255"/>
          <channel number="7" electrode="16" threshold="1" comfort="255"/>
          <channel number="8" electrode="15" threshold="1" comfort="255"/>
          <channel number="9" electrode="14" threshold="1" comfort="255"/>
          <channel number="10" electrode="13" threshold="1" comfort="255"/>
          <channel number="11" electrode="12" threshold="1" comfort="255"/>
          <channel number="12" electrode="11" threshold="1" comfort="255"/>
          <channel number="13" electrode="10" threshold="1" comfort="255"/>
          <channel number="14" electrode="9" threshold="1" comfort="255"/>
          <channel number="15" electrode="8" threshold="1" comfort="255"/>
          <channel number="16" electrode="7" threshold="1" comfort="255"/>
          <channel number="17" electrode="6" threshold="1" comfort="255"/>
          <channel number="18" electrode="5" threshold="1" comfort="255"/>
          <channel number="19" electrode="4" threshold="1" comfort="255"/>
          <channel number="20" electrode="3" threshold="1" comfort="255"/>
          <channel number="21" electrode="2" threshold="1" comfort="255"/>
          <channel number="22" electrode="1" threshold="1" comfort="255"/>
        </inline>
      </defaultmap>
    </device>
  </devices>


  <filters>
  </filters>


  <stimuli>
    <fixed_parameters/>
    <stimulus id="stim1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="elecdata1"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stim2">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="elecdata2"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stim12">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <simultaneous>
          <datablock id="elecdata1"/>
          <datablock id="elecdata2"/>
        </simultaneous>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections/>

</apex:apex>
