<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  <!-- Change the channel of a connection -->

  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>left</answer>
        <screen id="screen1" />
        <stimulus id="stimulusL" />
      </trial>
      <trial id="trial2" >
        <answer>right</answer>
        <screen id="screen1" />
        <stimulus id="stimulusR" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen1" >
      <gridLayout height="2" width="2" id="answer_layout" x="1" y="2">
        <button x="1" y="1" id="left">
          <text>left</text>
        </button>
        
        <button x="2" y="1" id="right">
          <text>right</text>
        </button>
       
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="left"/>
        <button id="right"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks>
    <uri_prefix>file:../stimuli</uri_prefix>
    <datablock id="wd1">
      <device>soundcard</device>
      <uri>wd1.wav</uri>
    </datablock>
  </datablocks>

  <devices>
    <master>soundcard</master>
    <device id="soundcard" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain id="gain">0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>

  <filters>
   <filter id="amp" xsi:type="apex:amplifier">
     <device>soundcard</device>
     <channels>1</channels>
     <basegain>0</basegain>
     <gain>0</gain>
   </filter>
    
  </filters>
 
  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulusL" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
                 <datablock id="wd1" />                    
           </datablocks>
      <variableParameters>
        <parameter id="targetchannel">0</parameter>
      </variableParameters>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulusR" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="wd1" />                    
      </datablocks>
      <variableParameters>
        <parameter id="targetchannel">1</parameter>
      </variableParameters>
      <fixedParameters/>
    </stimulus>
  </stimuli>
  
<connections>
  <connection>
    <from>
      <id>wd1</id>
      <channel>0</channel>
    </from>
    <to>
      <id>amp</id>
      <channel>0</channel>
    </to>
  </connection>
  
  <connection>
    <from>
      <id>amp</id>
      <channel>0</channel>
    </from>
    <to>
      <id>soundcard</id>
      <channel id="targetchannel">-1</channel>
    </to>
  </connection>

</connections>

<calibration profile="test">
  <stimuli>
    <stimulus id="stimulusL"/>
  </stimuli>
  <parameters>
    <parameter id="gain">
      <targetamplitude>60</targetamplitude>
      <mute></mute>
    </parameter>
  </parameters>
</calibration>
  
  

</apex:apex>


