<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">
  
  <!-- 
Send simple XML file to L34 device
    -->
    
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    
    <trials>
      <trial id="trial1" >
        <answer>button1</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>

    </trials>
  </procedure>
  
  
    <corrector xsi:type="apex:isequal"/>
    
    <screens>
      <screen id="screen1" >
        <gridLayout height="2" width="3" id="main_layout">
          
          <button x="1" y="1" id="button1" >
            <text>fadein.qic</text>
          </button>
          
          <button x="1" y="2" id="button2" >
            <text>fadechan.qic</text>
          </button>
          
        </gridLayout>
        <buttongroup id="buttongroup1">
          <button id="button1"/>
          <button id="button2"/>
        </buttongroup>
        <default_answer_element>buttongroup1</default_answer_element>
        
      </screen>
    </screens>
    
  
 <datablocks>
   <uri_prefix>../stimuli/</uri_prefix>
    <datablock id="rawdata1" >
      <device>l34device</device>
      <description>sample raw l34 datablock</description>
      <uri>simpleL34.xml</uri>
    </datablock>
   
</datablocks>

  <devices>
    <device id="l34device"  xsi:type="apex:L34DeviceType">
      <device_id>0</device_id>
      <implant>cic3</implant>
      <trigger>none</trigger>

      <defaultmap>
        <inline>
           <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>140</period>
          <channel number="1" electrode="1" threshold="1" comfort="255"/>
          <channel number="2" electrode="2" threshold="1" comfort="255"/>
          <channel number="3" electrode="3" threshold="1" comfort="255"/>
        </inline>
      </defaultmap>
    </device>
  </devices>
  
  <filters>
  </filters>
  

  
  <stimuli>
      <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1" />
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    
  </stimuli>

  <connections/>
  
 
  
   
</apex:apex>
