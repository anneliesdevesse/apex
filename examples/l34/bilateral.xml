<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
  xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment" version="1">
  <!-- 
Test of syncrhonized bilateral setup
    -->
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    <trials>
      <trial id="trial1">
        <answer>first</answer>
        <screen id="screen1"/>
        <stimulus id="stim1"/>
      </trial>
      <trial id="trial2">
        <answer>second</answer>
        <screen id="screen1"/>
        <stimulus id="stim2"/>
      </trial>
      <trial id="trial3">
        <answer>both</answer>
        <screen id="screen1"/>
        <stimulus id="stim12"/>
      </trial>
    </trials>
  </procedure>
  <corrector xsi:type="apex:isequal"/>
  <screens>
    <screen id="screen1">
        <gridLayout height="1" width="3" id="main_layout">
          
          <button x="1" y="1" id="first">
            <text>first</text>
          </button>
          
          <button x="2" y="1" id="second">
            <text>second</text>
          </button>

          <button x="3" y="1" id="both">
            <text>both</text>
          </button>
          
        </gridLayout>
        <buttongroup id="buttongroup1">
          <button id="first"/>
          <button id="second"/>
    	    <button id="both"/>
        </buttongroup>
        <default_answer_element>buttongroup1</default_answer_element>
        
      </screen>
  </screens>
  <datablocks>
    <uri_prefix>../stimuli/</uri_prefix>
    <datablock id="elecdata1">
      <device>l34-1</device>
      <description>sample raw l34 datablock</description>
      <uri>fadein.qic</uri>
    </datablock>
    <datablock id="elecdata2">
      <device>l34-2</device>
      <description>sample raw l34 datablock</description>
      <uri>fadein.qic</uri>
    </datablock>
    <!--datablock id="rawdata2" >
     <device>l34device</device>
     <description>sample raw l34 datablock</description>
     <uri>fadechan.qic</uri>
   </datablock>
   <datablock id="rawdata3" >
