     <description>[0-255] on every channel, per channel</description>
     <uri>fadechan-single.qic</uri>
   </datablock-->
  </datablocks>
  <devices>
    <master>l34-1</master>
    <device id="l34-1" xsi:type="apex:L34DeviceType">
      <device_id>1</device_id>
      <implant>cic3</implant>
      <trigger>out</trigger>
      <defaultmap>
        <inline>
          <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>140</period>
          <channel number="1" electrode="22" threshold="1" comfort="255"/>
          <channel number="2" electrode="21" threshold="1" comfort="255"/>
          <channel number="3" electrode="20" threshold="1" comfort="255"/>
          <channel number="4" electrode="19" threshold="1" comfort="255"/>
          <channel number="5" electrode="18" threshold="1" comfort="255"/>
          <channel number="6" electrode="17" threshold="1" comfort="255"/>
          <channel number="7" electrode="16" threshold="1" comfort="255"/>
          <channel number="8" electrode="15" threshold="1" comfort="255"/>
          <channel number="9" electrode="14" threshold="1" comfort="255"/>
          <channel number="10" electrode="13" threshold="1" comfort="255"/>
          <channel number="11" electrode="12" threshold="1" comfort="255"/>
          <channel number="12" electrode="11" threshold="1" comfort="255"/>
          <channel number="13" electrode="10" threshold="1" comfort="255"/>
          <channel number="14" electrode="9" threshold="1" comfort="255"/>
          <channel number="15" electrode="8" threshold="1" comfort="255"/>
          <channel number="16" electrode="7" threshold="1" comfort="255"/>
          <channel number="17" electrode="6" threshold="1" comfort="255"/>
          <channel number="18" electrode="5" threshold="1" comfort="255"/>
          <channel number="19" electrode="4" threshold="1" comfort="255"/>
          <channel number="20" electrode="3" threshold="1" comfort="255"/>
          <channel number="21" electrode="2" threshold="1" comfort="255"/>
          <channel number="22" electrode="1" threshold="1" comfort="255"/>
        </inline>
      </defaultmap>
    </device>
    <device id="l34-2" xsi:type="apex:L34DeviceType">
      <device_id>2</device_id>
      <implant>cic3</implant>
      <trigger>in</trigger>
      <defaultmap>
        <inline>
          <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>140</period>
          <channel number="1" electrode="22" threshold="1" comfort="255"/>
          <channel number="2" electrode="21" threshold="1" comfort="255"/>
          <channel number="3" electrode="20" threshold="1" comfort="255"/>
