<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

<!--
	Shows synchronisation for L34 using a soundcard pulse
	2 channels of stereo file are mixed into output ch 0
	the pulse goes to ch 1 
-->
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    
    <trials>
      <trial id="trial1" >
        <answer>button1</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
    
  <screens>
    <screen id="screen1" >
      <gridLayout height="1" width="2" >
        <button x="2" y="1" id="button1" >
          <text>Send</text>
        </button>
      </gridLayout>
	<buttongroup id="buttongroup1">
      	<button id="button1"/>
	</buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>    
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli/</uri_prefix>
<datablock id="rawdata1">
      <device>soundcard</device>
      <uri>click.wav</uri>
    </datablock> 
   <datablock id="l34data">
     <device>l34</device>
     <uri>10pulses+powerup-ch1.qic</uri>
   </datablock> 
   <datablock id="waitforl34">
     <device>soundcard</device>
     <uri>silence:566.4</uri>
   </datablock>
</datablocks>

  <devices>
    <master>soundcard</master>
    <device id="soundcard" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
      <buffersize>2048</buffersize>
      <padzero>4</padzero>
    </device>
    <device id="l34"  xsi:type="apex:L34DeviceType">
      <device_id>1</device_id>
      <implant>cic3</implant>
      <trigger>in</trigger>
      
      <defaultmap>
        <inline>
          <number_electrodes>3</number_electrodes>
          <mode>MP1+2</mode>
          <pulsewidth>25</pulsewidth>
          <pulsegap>8</pulsegap>
          <period>138</period>
          <channel number="1" electrode="1" threshold="1" comfort="255"/>
          <channel number="2" electrode="2" threshold="1" comfort="255"/>
          <channel number="3" electrode="3" threshold="1" comfort="255"/>
          <channel number="4" electrode="4" threshold="1" comfort="255"/>
          <channel number="5" electrode="5" threshold="1" comfort="255"/>
          <channel number="6" electrode="6" threshold="1" comfort="255"/>
          <channel number="7" electrode="7" threshold="1" comfort="255"/>
          <channel number="8" electrode="8" threshold="1" comfort="255"/>
          <channel number="9" electrode="9" threshold="1" comfort="255"/>
          <channel number="10" electrode="10" threshold="1" comfort="255"/>
          <channel number="11" electrode="11" threshold="1" comfort="255"/>
          <channel number="12" electrode="12" threshold="1" comfort="255"/>
          <channel number="13" electrode="13" threshold="1" comfort="255"/>
          <channel number="14" electrode="14" threshold="1" comfort="255"/>
          <channel number="15" electrode="15" threshold="1" comfort="255"/>
          <channel number="16" electrode="16" threshold="1" comfort="255"/>
          <channel number="17" electrode="17" threshold="1" comfort="255"/>
          <channel number="18" electrode="18" threshold="1" comfort="255"/>
          <channel number="19" electrode="19" threshold="1" comfort="255"/>
          <channel number="20" electrode="20" threshold="1" comfort="255"/>
          <channel number="21" electrode="21" threshold="1" comfort="255"/>
          <channel number="22" electrode="22" threshold="1" comfort="255"/>
        </inline>
      </defaultmap>
    </device>

  </devices>

 
  <filters>
    <filter id="pulsegen" xsi:type="apex:generator">
      <device>soundcard</device>
      <channels>1</channels>
      <continuous>false</continuous>
      <type>singlepulse</type>
      <basegain>0</basegain>
      <gain>0</gain>
      <frequency>0</frequency>
      <phase>0</phase>
      <pulsewidth>10</pulsewidth>
    </filter>
    
    
  </filters>

  
  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
                <simultaneous>
                  <sequential>
					<datablock id="waitforl34"/>
					<datablock id="rawdata1" />
                  </sequential>
                  <datablock id="l34data" />
                </simultaneous>  
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>

  </stimuli>

<connections>
	<connection>
	  <from>
	    <id>pulsegen</id>
	    <channel>0</channel>
	  </from>
	  <to>
	    <id>soundcard</id>
	    <channel>0</channel>
	  </to>
	  </connection>
<connection>
  <from>
    <id>rawdata1</id>
    <channel>0</channel>
  </from>
  <to>
    <id>soundcard</id>
    <channel>1</channel>
  </to>
</connection>
  <connection>
  <from>
    <id>waitforl34</id>
    <channel>0</channel>
  </from>
  <to>
    <id>soundcard</id>
    <channel>1</channel>
  </to>
  </connection>
  
	
</connections>
  
  

    
</apex:apex>

