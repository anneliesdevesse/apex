<?xml version="1.0" encoding="UTF-8"?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment" version="1">
  
  

  <!-- 
  Regression test for arclayout
   
    -->
    
   <procedure xsi:type="apex:adaptiveProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>random</order>
      <nUp>1</nUp>
      <nDown>1</nDown>
      <adapt_parameter>snr</adapt_parameter>
      <start_value>3</start_value>
      <stop_after_type>reversals</stop_after_type>
      <stop_after>5</stop_after>
      <rev_for_mean>3</rev_for_mean>
      <larger_is_easier>true</larger_is_easier>
      <stepsizes>
        <stepsize begin="0" size="2"/>
        <stepsize begin="2" size="1"/>
       </stepsizes>
    </parameters>
    
    <trials>
      <trial id="trial1">
        <answer>button_correct</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
      <trial id="trial2">
        <answer>button_correct</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus2"/>
      </trial>
      
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/> 
    
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    
    <screen id="screen1">
      <arcLayout width="2" type="upper">
        <button id="button-90" x="1" y="1">
          <text>-90</text>
        </button>
        <button id="button-45" x="2" y="1">
          <text>-45</text>
        </button>
        <button id="button-30" x="3" y="1">
          <text>-30</text>
        </button>
        <button id="button-15" x="4" y="1">
          <text>-15</text>
        </button>
        <button id="button0" x="5" y="1">
          <text>0</text>
        </button>
        <button id="button15" x="6" y="1">
          <text>15</text>
        </button>
        <button id="button30" x="7" y="1">
          <text>30</text>
        </button>
        <button id="button45" x="8" y="1">
          <text>45</text>
        </button>
        <button id="button90" x="9" y="1">
          <text>90</text>
        </button>
        
        
      </arcLayout>
      <default_answer_element>button90</default_answer_element>
    </screen>
    
   
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1">
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
   </datablock>
   <datablock id="rawdata2">
     <device>wavdevice</device>
     <uri>wd2.wav</uri>
   </datablock>
   
   
 </datablocks>
  
  <devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
        <buffersize>512</buffersize>
   </device>
 </devices>
  
  
  
  <filters>
  <filter id="noisegen" xsi:type="apex:generator">
    <device>wavdevice</device>
    <channels>1</channels>
    <continuous>false</continuous>
    <type>noise</type>
    <basegain>-20</basegain>
    <gain id="snr">0</gain>
    <frequency>0</frequency>
    <phase>0</phase>
  </filter>
    
  </filters>
  
  
  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    
    <stimulus id="stimulus1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1"/>
      </datablocks>
      <variableParameters/>
     <fixedParameters>
       <parameter id="fixed">1</parameter>
     </fixedParameters>
    </stimulus>
    
    <stimulus id="stimulus2">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata2"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">2</parameter>
      </fixedParameters>
    </stimulus>
    </stimuli>
  
  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    
  </connections>
  
  
</apex:apex>