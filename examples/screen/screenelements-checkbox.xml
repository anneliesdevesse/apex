<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">

    <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>1</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
    <trial id="trial_1">
	<answer>button_1</answer>
	<screen id="screen_1"/>
	<stimulus id="stimulus_1"/>
    </trial>


</trials>
        
    </procedure>
    
    <corrector xsi:type="apex:isequal"/>

    	<screens>
	<reinforcement>
		<progressbar>true</progressbar>
		<feedback length="300">false</feedback>
	</reinforcement>
	<screen id="screen_1" >
		<vLayout height="3" id="vLayout_1" >
			<label id="senlabel_1" x="1" y="1">
				<text>Ze moet hard studeren om te slagen</text>
			</label>
			
			<hLayout width="5" x="1" y="2" id="hLayout_12">
			<checkBox id="checkBox_11" x="1" y="1">
				<text>moet</text>
			</checkBox>
			<checkBox id="checkBox_12" x="2" y="1">
				<text>hard</text>
			</checkBox>
			<checkBox id="checkBox_13" x="3" y="1">
				<text>studeren</text>
			</checkBox>
			<checkBox id="checkBox_14" x="4" y="1">
				<text>slagen</text>
			</checkBox>
			</hLayout>
			<hLayout width="5" x="1" y="3" id="hLayout_13">
			<textEdit id="editor_11" x="1" y="1">
				<text></text>
				<inputmask></inputmask>
			</textEdit>
			<textEdit id="editor_12" x="2" y="1">
				<text></text>
				<inputmask></inputmask>
			</textEdit>
			<textEdit id="editor_13" x="3" y="1">
				<text></text>
				<inputmask></inputmask>
			</textEdit>
			<textEdit id="editor_14" x="4" y="1">
				<text></text>
				<inputmask></inputmask>
			</textEdit>
			</hLayout>
		</vLayout>
		<default_answer_element>button_1</default_answer_element>
	</screen>
	
	</screens>
    
    	<datablocks>
		<uri_prefix>../stimuli</uri_prefix>
	<datablock id="rawdata1">
	<device>wavdevice</device>
		<uri>sentence.wav</uri>
	</datablock>

	
	</datablocks>
    
    <devices>
            <device id="wavdevice" xsi:type="apex:wavDeviceType">
                <driver>portaudio</driver>
                <card>default</card>
                <channels>1</channels>
                <gain>0</gain>
                <samplerate>44100</samplerate>
                <buffersize>512</buffersize>
            </device>
        </devices>
  <filters/>
    
  	<stimuli>
	<fixed_parameters/>
	<stimulus id="stimulus_1">
	<datablocks>
	<simultaneous>
		<datablock id="rawdata1"/>
	</simultaneous>
	</datablocks>
	<variableParameters>
		</variableParameters>
	<fixedParameters>
		</fixedParameters>
	</stimulus>

	

	</stimuli>
        
   <connections/>
    <results>
        <xsltscript>cst.xsl</xsltscript>
    	<saveprocessedresults>true</saveprocessedresults>
    </results>
    <general>
        
    </general>

</apex:apex>

