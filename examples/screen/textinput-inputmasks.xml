<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">
  
  

  <!-- 
  Regression test for AID (cfr Apex 2)
  1. Sequential
   
    -->

  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>button1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
  <!--type>isequal</type-->


  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    <screen id="screen1">
      <gridLayout height="2" width="3" id="main_layout">

        <label id="label1" x="1" y="1">
          <text>Numeric</text>
        </label>

        <textEdit id="text1" x="1" y="2">
          <inputmask>numbers</inputmask>
        </textEdit>

        <label id="label2" x="2" y="1">
          <text>All</text>
        </label>

        <textEdit id="text2" x="2" y="2">
          <inputmask></inputmask>
        </textEdit>

        <label id="label3" x="3" y="1">
          <text>3 numbers mask</text>
        </label>
        
        <textEdit id="text3" x="3" y="2">
          <inputmask>999</inputmask>
        </textEdit>
        

      </gridLayout>
      <default_answer_element>text3</default_answer_element>
    </screen>
  </screens>

  <datablocks/>
  <devices/>
  <filters/>

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections/>


</apex:apex>
