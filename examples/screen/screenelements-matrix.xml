<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
	xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment" version="1">


	<!-- demonstrate the use of the matrix type -->

	<procedure xsi:type="apex:constantProcedureType">

		<parameters>
			<presentations>1</presentations>
			<skip>0</skip>
			<order>sequential</order>
		</parameters>

		<trials>
			<trial id="trial_1">
				<answer>button_1</answer>
				<screen id="screen1"/>
				<stimulus id="stimulus_1"/>
			</trial>
			
			<trial id="trial_2">
				<answer>button_1</answer>
				<screen id="screen2"/>
				<stimulus id="stimulus_1"/>
			</trial>


		</trials>

	</procedure>

	<corrector xsi:type="apex:isequal"/>

	<screens>
		<reinforcement>
			<progressbar>true</progressbar>
			<feedback length="300">false</feedback>
		</reinforcement>
		<screen id="screen1">
	<gridLayout width="1" height="2">
		<label id="label" col="1" row="1">
			<text>Matrix:</text>
		</label>
		
		<matrix id="matrix" row="2" col="1">
			<element row="1" col="1">
				<name>row1 col1</name>
			</element>
			<element row="2" col="1">
				<name>row2 col1</name>
			</element>
			<element row="3" col="1">
				<name>row 3 col 1</name>
			</element>
			
			<element row="1" col="2">
				<name>row1 col2</name>
			</element>
			<element row="2" col="2">
				<name>row2 col2</name>
			</element>
		</matrix>
	</gridLayout>
			<default_answer_element>matrix</default_answer_element>
	</screen>


		<screen id="screen2">
			<gridLayout width="1" height="3">
				<label id="label" col="1" row="1">
					<text>Matrix:</text>
				</label>
				
				<matrix id="matrix" row="2" col="1">
					<autocontinue>false</autocontinue>
					<element row="1" col="1">
						<name>row1 col1</name>
					</element>
					<element row="2" col="1">
						<name>row2 col1</name>
					</element>
					<element row="3" col="1">
						<name>row 3 col 1</name>
					</element>
					
					<element row="1" col="2">
						<name>row1 col2</name>
					</element>
					<element row="2" col="2">
						<name>row2 col2</name>
					</element>
				</matrix>
				
				<button id="button" row="3" col="1">
					<text>OK</text>
				</button>
				
			</gridLayout>
			<default_answer_element>matrix</default_answer_element>
		</screen>
		
	</screens>

	<datablocks>
		<uri_prefix>../stimuli</uri_prefix>
		<datablock id="rawdata1">
			<device>wavdevice</device>
			<uri>wd1-mono.wav</uri>
		</datablock>


	</datablocks>

	<devices>
		<device id="wavdevice" xsi:type="apex:wavDeviceType">
			<driver>portaudio</driver>
			<card>default</card>
			<channels>1</channels>
			<gain>0</gain>
			<samplerate>44100</samplerate>
		</device>
	</devices>
	<filters/>

	<stimuli>
		<fixed_parameters/>
		<stimulus id="stimulus_1">
			<datablocks>
				<simultaneous>
					<datablock id="rawdata1"/>
				</simultaneous>
			</datablocks>

		</stimulus>



	</stimuli>

	<connections/>
	<results>
		<xsltscript>cst.xsl</xsltscript>
		<saveprocessedresults>true</saveprocessedresults>
	</results>


</apex:apex>
