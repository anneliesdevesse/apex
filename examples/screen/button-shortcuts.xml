<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>buttongroup1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    <screen id="screen1">
      <gridLayout height="4" width="3" id="main_layout">

        <button x="1" y="2" id="button1">
          <shortcut>a</shortcut>
          <text>a key</text>
        </button>

        <button x="2" y="2" id="button2">
          <shortcut>UpArrow</shortcut>
          <text>up arrow</text>
        </button>

        <button x="3" y="2" id="button3">
          <shortcut hex="true">1031</shortcut>
          <text>key 0x1031 aka F2</text>
        </button>

        <button x="1" y="3" id="button4">
          <shortcut modifier="Alt">b</shortcut>
          <text>alt-b key</text>
        </button>

        <button x="2" y="3" id="button5">
          <shortcut>Return</shortcut>
          <text>return key</text>
        </button>

        <button x="3" y="3" id="button6">
          <shortcut modifier="Ctrl">Space</shortcut>
          <text>Ctrl+space</text>
        </button>

      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
        <button id="button4"/>
        <button id="button5"/>
        <button id="button6"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks/>
  <devices/>
  <filters/>

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections/>


</apex:apex>
