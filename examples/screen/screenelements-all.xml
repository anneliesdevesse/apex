<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">
  
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    <trials>
      <trial id="trial1" >
        <answer>button</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
    
  <screens>
    <uri_prefix>../movies</uri_prefix>
    <screen id="screen1" >
      <gridLayout height="3" width="4" id="main_layout">

        <button x="1" y="2" id="button" >
          <text>button</text>
        </button>

        <label x="2" y="2" id="label" >
          <text>label</text>
        </label>

        <textEdit x="3" y="2" id="textinput" >
          
        </textEdit>

        <flash  x="4" y="1" id="flash" >
          <uri>dragon/stillegg.swf</uri>
          <feedback>
            <highlight>dragon/shakeegg.swf</highlight>
            <positive>dragon/goodegg.swf</positive>
            <negative>dragon/badegg2.swf</negative>
          </feedback>
        </flash>

        <picture x="4" y="2" id="picture" >
          <uri>../pictures/1.jpg</uri>
        </picture>
        
        
        
      </gridLayout>
      
      <buttongroup id="buttongroup">
        <button id="button"/>
        <button id="textinput"/>
        <button id="picture"/>
      </buttongroup>
    
      <default_answer_element>textinput</default_answer_element>
    
    </screen>
  </screens>
  
  <datablocks/>
  <devices/>  
  <filters/>    

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>
  
  <connections/>  
  
</apex:apex>
