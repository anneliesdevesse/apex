<?xml version="1.0" encoding="UTF-8"?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment" version="1">
  
  

  <!-- 
  Regression test for gridLayout
   
    -->
    
   <procedure xsi:type="apex:adaptiveProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>random</order>
      <nUp>1</nUp>
      <nDown>1</nDown>
      <adapt_parameter>snr</adapt_parameter>
      <start_value>3</start_value>
      <stop_after_type>reversals</stop_after_type>
      <stop_after>5</stop_after>
      <rev_for_mean>3</rev_for_mean>
      <larger_is_easier>true</larger_is_easier>
      <stepsizes>
        <stepsize begin="0" size="2"/>
        <stepsize begin="2" size="1"/>
       </stepsizes>
    </parameters>
    
    <trials>
      <trial id="trial1">
        <answer>button_correct</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
      <trial id="trial2">
        <answer>button_correct</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus2"/>
      </trial>
      
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/> 
    
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    
    <screen id="screen1">
      <gridLayout width="2" height="1" id="main">
        
        <gridLayout width="1" height="3" row="1" col="1" id="nest1">
          
          
          <button id="button2" y="2" x="1">
            <text>Button</text>
          </button>
          
          <button id="button3" y="3"  x="1">
            <text>Button</text>
          </button>
          
          <button id="button4" y="1"  x="1">
            <text>Button</text>
          </button>
          
        </gridLayout>
        
        <gridLayout width="1" height="4" row="1" col="2" id="nest2">
        
        
        <button id="button5" y="1"  x="1">
          <text>Button</text>
        </button>
        <button id="button6" y="2"  x="1">
          <text>Button</text>
        </button>
        
        <button id="button7" y="3"  x="1">
          <text>Button</text>
        </button>
        
        <button id="button8" y="4"  x="1">
          <text>Button</text>
        </button>
          
        </gridLayout>
        
      </gridLayout>
        
        
      <default_answer_element>button90</default_answer_element>
    </screen>
    
   
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1">
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
   </datablock>
   <datablock id="rawdata2">
     <device>wavdevice</device>
     <uri>wd2.wav</uri>
   </datablock>
   
   
 </datablocks>
  
  <devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
        <buffersize>512</buffersize>
   </device>
 </devices>
  
  
  
  <filters>
  <filter id="noisegen" xsi:type="apex:generator">
    <device>wavdevice</device>
    <channels>1</channels>
    <continuous>false</continuous>
    <type>noise</type>
    <basegain>-20</basegain>
    <gain id="snr">0</gain>
    <frequency>0</frequency>
    <phase>0</phase>
  </filter>
    
  </filters>
  
  
  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    
    <stimulus id="stimulus1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1"/>
      </datablocks>
      <variableParameters/>
     <fixedParameters>
       <parameter id="fixed">1</parameter>
     </fixedParameters>
    </stimulus>
    
    <stimulus id="stimulus2">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata2"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">2</parameter>
      </fixedParameters>
    </stimulus>
    </stimuli>
  
  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    
  </connections>
  
  
</apex:apex>