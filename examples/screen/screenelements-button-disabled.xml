<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>button</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
    
  <screens>
    <uri_prefix>../pictures</uri_prefix>
    <screen id="screen1" >
      <gridLayout height="1" width="2" id="main_layout">

        <button row="1" col="1" id="button1" >
          <text>button - normal</text>
        </button>
        
        <button row="1" col="2" id="button2" >
          <disabled>true</disabled>
          <text>button - disabled</text>
        </button>
  
      </gridLayout>
      
      <buttongroup id="buttongroup">
        <button id="button1"/>
        <button id="button2"/>
      </buttongroup>
    
      <default_answer_element>button1</default_answer_element>
    
    </screen>
  </screens>
  
  <datablocks/>
  <devices/>  
  <filters/>    

  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">0</parameter>
      </fixedParameters>
    </stimulus>
  </stimuli>
  
  <connections/>  
  
</apex:apex>
