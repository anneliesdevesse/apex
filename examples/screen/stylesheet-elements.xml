<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">

  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <choices>3</choices>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>button</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
        <standard id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:alternatives">
    <answers>
      <answer number="1" value="button1"/> 
      <answer number="2" value="button2"/>
      <answer number="3" value="button3"/>
    </answers>
    
  </corrector>
    
  <screens>
    <uri_prefix>../pictures</uri_prefix>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="500">true</feedback>
      <showcurrent>true</showcurrent>
    </reinforcement>
    
    <style_apex>
      QWidget#background {background-color: green} 
    </style_apex>
    <!--style>
      QPushButton{background-color: yellow}
    </style-->
    <style>
      QPushButton[role="none"]{background-color: yellow}
      QPushButton[role="highlight"]{background-color: black}
      QPushButton[role="positive"]{background-color: blue}
      QPushButton[role="negative"]{background-color: magenta}
    </style>
    
    <screen id="screen1" >
      <gridLayout height="3" width="4" id="main_layout">

        <button x="1" y="1" id="button" >
          <style>Color: red</style>
          <text>button 1</text>
        </button>
        
        <label x="1" y="2" id="label" >
          <text>label</text>
        </label>

        <textEdit x="1" y="3" id="textinput" >
          <text>textedit</text>
        </textEdit>

        <parameterlist id="paramlist" x="2" y="2">
          <parameter>fixed</parameter>
        </parameterlist>

        
        <button id="button1" row="3" col="1">
          <text>1</text>
        </button>
        <button id="button2" row="3" col="2">
          <text>2</text>
        </button>
        <button id="button3" row="3" col="3">
          <text>3</text>
        </button>
        
        


      </gridLayout>
      
      <buttongroup id="buttongroup">
        <button id="button"/>
        <button id="textinput"/>
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
      </buttongroup>
    
      <default_answer_element>buttongroup</default_answer_element>
    
    </screen>
  </screens>
  
  <datablocks/>
  <devices/>  
  <filters/>    

  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">0</parameter>
      </fixedParameters>
    </stimulus>
  </stimuli>
  
  <connections/>  
  
</apex:apex>
