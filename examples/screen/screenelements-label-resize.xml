<?xml version="1.0" encoding="UTF-8"?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment" version="1">
  
  

  <!-- 
  Regression test for screen: answerlabel
   
  -->
  
  
  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>1</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    
      <trials>
      <trial id="trial1">
        <answer>antwoord 1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
        <trial id="trial2">
          <answer>antwoord 2</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus1"/>
        </trial>
        <trial id="trial3">
          <answer>antwoord 3</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus1"/>
        </trial>
        
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/> 
    
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    
    <screen id="screen1">
      <gridLayout height="4" width="1">
        <label x="1" y="1" id="uitleg">
          <text>small</text>
        </label>
        
        <label row="2" col="1" id="label2">
          <text>much longer text that maybe does fill the entire screen and has therefore to be resized to the full available space</text>
        </label>
        <label row="3" col="1" id="label3">
          <text>much longer text that maybe 
            does fill the entire screen and has therefore 
            to be resized to the full available space</text>
        </label>
        
        
        <gridLayout height="1" width="3" row="4" col="1">
          <button x="1" y="1" id="button1" >
            <fgcolor>green</fgcolor>
            <text>1</text>
          </button>
          <button x="2" y="1" id="button2" >
            <text>2</text>
          </button>
          <button x="3" y="1" id="button3" >
            <text>3</text>
          </button>
          
        </gridLayout>
      </gridLayout>
      
      
      <buttongroup id="buttongroup1">
        <button id="button1"/>
                </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1">
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
   </datablock>
   <datablock id="rawdata2">
     <device>wavdevice</device>
     <uri>wd2.wav</uri>
   </datablock>
   
   
 </datablocks>
  
  <devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
        <buffersize>512</buffersize>
   </device>
 </devices>
  
  
  
  <filters>
  <filter id="noisegen" xsi:type="apex:generator">
    <device>wavdevice</device>
    <channels>1</channels>
    <continuous>false</continuous>
    <type>noise</type>
    <basegain>-20</basegain>
    <gain id="snr">0</gain>
    <frequency>0</frequency>
    <phase>0</phase>
  </filter>
    
  </filters>
  
  
  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    
    <stimulus id="stimulus1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1"/>
      </datablocks>
      <variableParameters/>
     <fixedParameters>
       <parameter id="fixed">1</parameter>
     </fixedParameters>
    </stimulus>
    
    <stimulus id="stimulus2">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata2"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">2</parameter>
      </fixedParameters>
    </stimulus>
    </stimuli>
  
  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
    
  </connections>
  
  
</apex:apex>