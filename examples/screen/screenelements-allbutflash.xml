<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>button</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
    
  <screens>
    <uri_prefix>../pictures</uri_prefix>
    <screen id="screen1" >
      <gridLayout height="3" width="4" id="main_layout">

        <button x="1" y="1" id="button" >
          <text>button</text>
        </button>

        <label x="1" y="2" id="label" >
          <text>label</text>
        </label>

        <textEdit x="1" y="3" id="textinput" >
          <text>textedit</text>
        </textEdit>

        <answerlabel id="answerlabel" x="2" y="1"/>

        <parameterlist id="paramlist" x="2" y="2">
          <parameter>fixed</parameter>
        </parameterlist>

        <picture x="2" y="3" id="picture" >
          <uri>1.jpg</uri>
        </picture>



      </gridLayout>
      
      <buttongroup id="buttongroup">
        <button id="button"/>
        <button id="textinput"/>
        <button id="picture"/>
      </buttongroup>
    
      <default_answer_element>textinput</default_answer_element>
    
    </screen>
  </screens>
  
  <datablocks/>
  <devices/>  
  <filters/>    

  <stimuli>
    <fixed_parameters>
      <parameter id="fixed"/>
    </fixed_parameters>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters>
        <parameter id="fixed">0</parameter>
      </fixedParameters>
    </stimulus>
  </stimuli>
  
  <connections/>  
  
</apex:apex>
