<?xml version="1.0" encoding="UTF-8"?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment" version="1">
  
  

  <!-- 
  Regression test for screen: pictures
    should show 4 pictures and react to the correct one
   
  -->
  
  
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>
    
      <trials>
      <trial id="trial1">
        <answer>picture_1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
        <trial id="trial2">
          <answer>picture_2</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus2"/>
        </trial>
        <trial id="trial3">
          <answer>picture_3</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus3"/>
        </trial>
        <trial id="trial4">
          <answer>picture_4</answer>
          <screen id="screen1"/>
          <stimulus id="stimulus4"/>
        </trial>
        
        
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/> 
    
  <screens>
    <uri_prefix>../pictures</uri_prefix>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
      <feedback_on>clicked</feedback_on>
    </reinforcement>
    
    <screen id="screen1">
      
      <gridLayout height="2" width="2">
        <picture id="picture_1" x="1" y="1">
          <uri>1.png</uri>
        </picture>
        <picture id="picture_2" x="2" y="1">
          <uri>2.png</uri>
        </picture>
        <picture id="picture_3" x="1" y="2">
          <uri>3.png</uri>
        </picture>
        <picture id="picture_4" x="2" y="2">
          <uri>4-big.png</uri>
        </picture>
        
        
          
            </gridLayout>
      
      
      <buttongroup id="buttongroup1">
        <button id="picture_1"/>
        <button id="picture_2"/>
        <button id="picture_3"/>
        <button id="picture_4"/>
                </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1" >
     <device>wavdevice</device>
     <description>sample raw datablock</description>
     <uri>wd1.wav</uri>
   </datablock>
   <datablock id="rawdata2" >
     <device>wavdevice</device>
     <description>sample raw datablock</description>
     <uri>wd2.wav</uri>
   </datablock>
   <datablock id="rawdata3" >
     <device>wavdevice</device>
     <description>sample raw datablock</description>
     <uri>wd3.wav</uri>
   </datablock>
   <datablock id="rawdata4" >
     <device>wavdevice</device>
     <description>sample raw datablock</description>
     <uri>wd4.wav</uri>
   </datablock>
   
   
 </datablocks>
  
  <devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
   </device>
 </devices>
  
  
  
  <filters>

    
  </filters>
  
  
  <stimuli>
    <fixed_parameters>
    </fixed_parameters>
    
    <stimulus id="stimulus1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    
    <stimulus id="stimulus2">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata2"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    
    <stimulus id="stimulus3">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata3"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    
    <stimulus id="stimulus4">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata4"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>  
    
    </stimuli>
  
  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>wavdevice</id>
        <channel>0</channel>
      </to>
    </connection>
   
    
  </connections>
  
  
</apex:apex>