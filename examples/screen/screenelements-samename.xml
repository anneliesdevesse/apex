<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  <!-- 
  Check whether everything is OK when two screenelements in different screens have the same name
  -->
  
  <procedure xsi:type="apex:constantProcedureType">

    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1">
        <answer>button1</answer>
        <screen id="screen1"/>
        <stimulus id="stimulus1"/>
      </trial>
      
      <trial id="trial2">
        <answer>button1</answer>
        <screen id="screen2"/>
        <stimulus id="stimulus1"/>
      </trial>

    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    <screen id="screen1">
      <gridLayout height="1" width="2" id="main_layout">

        <button x="1" y="1" id="button1">
          <shortcut>a</shortcut>
          <text>a - screen1</text>
        </button>

        <button x="2" y="1" id="button2">
          <shortcut>b</shortcut>
          <text>b</text>
        </button>


      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>

  
  <screen id="screen2">
    <gridLayout height="1" width="2" id="main_layout">
      
      <button x="1" y="1" id="button1">
        <shortcut>a</shortcut>
        <text>a - screen 2</text>
      </button>
      
      <button x="2" y="1" id="button2">
        <shortcut>b</shortcut>
        <text>b</text>
      </button>
      
      
    </gridLayout>
    <buttongroup id="buttongroup1">
      <button id="button1"/>
      <button id="button2"/>
    </buttongroup>
    <default_answer_element>buttongroup1</default_answer_element>
  </screen>
  </screens>

  <datablocks/>
  <devices/>
  <filters/>

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description/>
      <datablocks/>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections/>


</apex:apex>
