<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2003/01/wi">


<!-- Create installer containing the visual studio runtime files, useful for using debug versions of apex -->

  <?define MergePath="c:/Program Files/Common Files/Merge Modules" ?>
  <?if $(env.QMAKESPEC) = "win32-msvc2008" ?>
    <?define Crt90 ?>
  <?endif ?>
 
  
  
  <Product Name="VSRuntime" Id="D220D51B-3A72-4736-A9CB-5661FD409245"
		Language="1033" Codepage="1252"
		Version="1.0.0" Manufacturer="None">

		<Package Id="????????-????-????-????-????????????" Keywords="Installer"
			Description="VSRuntime Installer" Comments="TODO" Manufacturer="None"
			InstallerVersion="100" Languages="1033" Compressed="yes" SummaryCodepage="1252"/>

		<Media Id="1" Cabinet="vsinstaller.cab" EmbedCab="yes" DiskPrompt="CD-ROM #1"/>
    
    <Property Id="DiskPrompt" Value="VS runtime installation [1]"/>
    
		<Directory Id="TARGETDIR" Name="SourceDir">

		
		</Directory>

		

		
	
		<?ifdef Crt90 ?>
		<?ifdef Debug ?>
		<DirectoryRef Id="TARGETDIR">
			<Merge Id="Crt90DebugMerge" Language="0"
				src="$(var.MergePath)/Microsoft_VC90_DebugCRT_x86.msm" DiskId="1"/>
			<Merge Id="Crt90PolicyDebugMerge" Language="0"
				src="$(var.MergePath)/policy_9_0_Microsoft_VC90_DebugCRT_x86.msm" DiskId="1"/>
		</DirectoryRef>
		<Feature Id="Crt90DebugFeature" Title="VS 2008 Debug CRT" Level="1"
			Description="The C++ runtime library. You should not disable this feature unless you know what you do."
			AllowAdvertise="no">
			<MergeRef Id="Crt90DebugMerge"/>
			<MergeRef Id="Crt90PolicyDebugMerge"/>
		</Feature>
		<?else?>
		<DirectoryRef Id="TARGETDIR">
			<Merge Id="Crt90ReleaseMerge" Language="0"
				src="$(var.MergePath)/Microsoft_VC90_CRT_x86.msm" DiskId="1"/>
			<Merge Id="Crt90PolicyReleaseMerge" Language="0"
				src="$(var.MergePath)/policy_9_0_Microsoft_VC90_CRT_x86.msm" DiskId="1"/>
		</DirectoryRef>
		<Feature Id="Crt90ReleaseFeature" Title="VS 2008 Release CRT" Level="1"
			Description="The C++ runtime library. You should not disable this feature unless you know what you do."
			AllowAdvertise="no">
			<MergeRef Id="Crt90ReleaseMerge"/>
			<MergeRef Id="Crt90PolicyReleaseMerge"/>
		</Feature>
		<?endif?>
		<?endif?>

		<UIRef Id="WixUI_FeatureTree"/>

  </Product>
  
</Wix>
