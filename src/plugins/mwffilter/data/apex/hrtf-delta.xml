<apex:apex xmlns:apex="http://www.kuleuven.be/exporl/Lab/Apex"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1"
    xsi:schemaLocation="http://www.kuleuven.be/exporl/Lab/Apex ../../../Checkouts/apex3/trunk/apex/schemas/apex-schema.xsd">

    <procedure xsi:type="apex:pluginProcedureType">
        <parameters>
            <presentations>100</presentations>
            <skip>0</skip>
            <order>sequential</order>
            <script>hrtf-delta</script>
        </parameters>
        <trials>
            <trial id="trial">
                <screen id="screen"/>
                <stimulus id="stimulus"/>
            </trial>
        </trials>
    </procedure>

    <corrector xsi:type="apex:isequal"/>

    <screens>
        <reinforcement>
            <progressbar>true</progressbar>
            <feedback length="300">false</feedback>
        </reinforcement>

        <screen id="screen">
            <gridLayout height="1" id="main_layout" width="5">
                <button id="delta-30" x="1" y="1">
                    <text>-30</text>
                </button>
                <button id="delta-15" x="2" y="1">
                    <text>-15</text>
                </button>
                <parameterlist id="pl" x="3" y="1">
                    <parameter>angle</parameter>
                </parameterlist>
                <button id="delta15" x="4" y="1">
                    <text>+15</text>
                </button>
                <button id="delta30" x="5" y="1">
                    <text>+30</text>
                </button>
            </gridLayout>

            <buttongroup id="buttongroup">
                <button id="delta-30"/>
                <button id="delta-15"/>
                <button id="delta15"/>
                <button id="delta30"/>
            </buttongroup>
            <default_answer_element>buttongroup</default_answer_element>
        </screen>
    </screens>

    <datablocks>
        <datablock id="rawdata">
            <device>wavdevice</device>
            <description>sample raw datablock</description>
            <uri>text.wav</uri>
        </datablock>
    </datablocks>

    <devices>
        <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
            <card>default</card>
            <channels>2</channels>
            <gain>0</gain>
            <samplerate>44100</samplerate>
            <buffersize>4096</buffersize>
            <blocksize>16384</blocksize>
        </device>
    </devices>

    <filters>
        <filter id="hrtffilter" xsi:type="apex:pluginfilter">
            <device>wavdevice</device>
            <channels>4</channels>
            <continuous>false</continuous>
            <plugin>hrtf</plugin>
            <parameter id="angle" name="angle">0</parameter>
	    <parameter name="uri">GHB_0_5s_20480_angle${angle}.bin</parameter>
        </filter>
    </filters>

    <stimuli>
        <fixed_parameters/>
        <stimulus id="stimulus">
            <description>Eenvoudige teststimulus</description>
            <datablocks>
                <datablock id="rawdata"/>
            </datablocks>
            <variableParameters/>
            <fixedParameters/>
        </stimulus>
    </stimuli>


    <connections>
        <connection>
            <from>
                <id>_ALL_</id>
                <channel>0</channel>
            </from>
            <to>
                <id>hrtffilter</id>
                <channel>0</channel>
            </to>
        </connection>

        <connection>
            <from>
                <id>hrtffilter</id>
                <channel>0</channel>
            </from>
            <to>
                <id>wavdevice</id>
                <channel>0</channel>
            </to>
        </connection>

        <connection>
            <from>
                <id>hrtffilter</id>
                <channel>3</channel>
            </from>
            <to>
                <id>wavdevice</id>
                <channel>1</channel>
            </to>
        </connection>
    </connections>

</apex:apex>
